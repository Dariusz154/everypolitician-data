#!/usr/bin/env bash
#
# This script changes into each legislature directory in turn and then runs this
# script's arguments as a command.

if [[ $# = 0 ]]; then
  echo "Usage: $0 <command>" 2>&1
  exit -1
fi

for dir in data/*/*; do
  if [[ -d "$dir" ]]; then
    (
      cd "$dir"
      eval "$@"
    )
  fi
done
